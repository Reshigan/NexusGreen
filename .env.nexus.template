# SolarNexus Production Environment Configuration
# Server: 13.247.192.38 | Domain: nexus.gonxt.tech | SSL: reshigan@gonxt.tech
# Copy this file to .env.production and update the secure values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
SERVER_IP=13.247.192.38
DOMAIN=nexus.gonxt.tech
FRONTEND_URL=https://nexus.gonxt.tech
BACKEND_URL=https://nexus.gonxt.tech/api

# =============================================================================
# SSL CONFIGURATION
# =============================================================================
SSL_EMAIL=reshigan@gonxt.tech

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=solarnexus
POSTGRES_USER=solarnexus
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_DB_PASSWORD
DATABASE_URL=postgresql://solarnexus:CHANGE_THIS_SECURE_DB_PASSWORD@postgres:5432/solarnexus

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=CHANGE_THIS_SECURE_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_THIS_SECURE_REDIS_PASSWORD@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# JWT AND SECURITY (Generate with: openssl rand -base64 64)
# =============================================================================
JWT_SECRET=CHANGE_THIS_SECURE_JWT_SECRET_MINIMUM_64_CHARACTERS
JWT_REFRESH_SECRET=CHANGE_THIS_SECURE_JWT_REFRESH_SECRET_MINIMUM_64_CHARACTERS
JWT_EXPIRES_IN=24h
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_MINIMUM_32_CHARACTERS
SESSION_TIMEOUT=3600000

# =============================================================================
# EMAIL CONFIGURATION (Update with your SMTP settings)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM=noreply@nexus.gonxt.tech
EMAIL_FROM_NAME=SolarNexus

# =============================================================================
# CORS AND SECURITY
# =============================================================================
CORS_ORIGIN=https://nexus.gonxt.tech
HELMET_ENABLED=true
CSRF_PROTECTION=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log
VERBOSE_LOGGING=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DATABASE POOL CONFIGURATION
# =============================================================================
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# =============================================================================
# API DOCUMENTATION
# =============================================================================
API_DOCS_ENABLED=false
API_DOCS_PATH=/docs

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_EXPORT=true

# =============================================================================
# EXTERNAL API CONFIGURATION (Optional - Update as needed)
# =============================================================================
# SOLAX_API_TOKEN=your_solax_api_token_here
# SOLAX_API_URL=https://www.solaxcloud.com:9443/proxy/api/getRealtimeInfo.do

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================
# GOOGLE_ANALYTICS_ID=your_ga_id_here
# SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEVELOPMENT/DEBUG (Keep false in production)
# =============================================================================
DEBUG_MODE=false