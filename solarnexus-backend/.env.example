# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/solarnexus?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@solarnexus.com
FROM_NAME=SolarNexus

# SolaX API Configuration
SOLAX_BASE_URL=https://openapi-eu.solaxcloud.com
SOLAX_CLIENT_ID=your-solax-client-id
SOLAX_CLIENT_SECRET=your-solax-client-secret

# External APIs
WEATHER_API_KEY=your-weather-api-key
MUNICIPAL_RATES_API_KEY=your-municipal-rates-api-key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# Production Server
PRODUCTION_SERVER_IP=13.247.192.38
SSL_CERT_PATH=/etc/ssl/certs/solarnexus.crt
SSL_KEY_PATH=/etc/ssl/private/solarnexus.key