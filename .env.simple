# SolarNexus Simple Configuration
# Copy this to .env and customize as needed

# Database Configuration
POSTGRES_DB=solarnexus
POSTGRES_USER=solarnexus
POSTGRES_PASSWORD=solarnexus_secure_password_2024

# Redis Configuration  
REDIS_PASSWORD=redis_secure_password_2024

# Application URLs
VITE_API_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:80,http://localhost:3000

# Security
JWT_SECRET=SolarNexus2024_Production_JWT_Secret_Key_Secure_Change_This

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Computed URLs (don't change these)
DATABASE_URL=postgresql://solarnexus:solarnexus_secure_password_2024@postgres:5432/solarnexus
REDIS_URL=redis://:redis_secure_password_2024@redis:6379