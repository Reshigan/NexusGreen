# SolarNexus Server Environment Configuration Template
# Copy this file to .env and update the values for your server

# Database Configuration
POSTGRES_DB=solarnexus
POSTGRES_USER=solarnexus
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://solarnexus:your_secure_database_password_here@postgres:5432/solarnexus

# SolaX Database Configuration (Update with your SolaX database details)
SOLAX_DB_HOST=your_solax_db_host
SOLAX_DB_USER=your_solax_db_user
SOLAX_DB_PASSWORD=your_solax_db_password
SOLAX_DB_NAME=your_solax_db_name
SOLAX_DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Email Configuration (Update with your email service details)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_SECURE=false

# SolaX API Configuration
SOLAX_TOKEN_ID=your_solax_token_id
SOLAX_API_URL=https://www.solaxcloud.com:9443/proxy/api/getRealtimeInfo.do
SOLAX_BUSINESS_TYPE=4
SOLAX_SYNC_INTERVAL_HOURS=1

# Application URLs (Update with your domain)
FRONTEND_URL=https://your-domain.com
REACT_APP_API_URL=https://your-domain.com/api
REACT_APP_WS_URL=wss://your-domain.com
VITE_API_URL=http://localhost:3000
CORS_ORIGIN=https://your-domain.com,http://localhost:80,http://localhost:3000

# Server Configuration (Update with your server details)
SERVER_IP=your_server_ip
DOMAIN=your-domain.com
NODE_ENV=production
PORT=3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL Configuration (Update paths if using SSL)
SSL_CERT_PATH=/etc/nginx/ssl/your-domain.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/your-domain.com.key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/solarnexus.log

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_here_minimum_32_characters
SESSION_MAX_AGE=86400000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups